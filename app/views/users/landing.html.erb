<% content_for :stylesheet do %>
   <%= stylesheet_link_tag "landing", media: 'all', 'data-turbolinks-track' => true %>
<% end %>

<%  #render "layouts/signin" %>

<div class='row'>
	<div class='col-xs-12'>
		<div class="jumbotron">
			<h2>Welcome to the User Dashboard!</h2>
			<h4>Built using Ruby on Rails. This application uses all CRUD actions. Users can create/edit their own personal profile. User can leave posts of comments on other users wall. Users with administration access can also modify or remove other users account infomation.</h4>
			<a class="btn btn-primary btn-lg" href="/users" role="button">Create a Profile</a>
			<%= link_to("Already have an account? Login In.", "/sessions/index", class: "login_link") %>
<!-- 			<a href="" class="login_link">Already have an account? Login In.</a> -->
		</div>
	</div>
</div>

<div class='row'>
	<div class='col-xs-4 sub_block'>
		<h3>Manage Users</h3>
		<p>Using this application, you'll learn how to add,
		 remove, and edit users for the application</p>
	</div>
	<div class='col-xs-4 sub_block'>
		<h3>Leave a Message</h3>
		<p>Users will be able to leave a message to another
		 user using this application</p>
	</div>
	<div class='col-xs-4 sub_block'>
		<h3>Edit User Information</h3>
		<p>Admins will be able to edit another user's information
		 (email address, first name, last name, etc.)</p>
	</div>

</div>
